  <script>
    const form = document.getElementById('signup');
    const nameEl = document.getElementById('name');
    const mailEl = document.getElementById('email');
    const err = document.getElementById('err');
    const ok = document.getElementById('ok');

    function isValidEmail(v){
      return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(v);
    }

    form.addEventListener('submit', (e) => {
      e.preventDefault();
      err.style.display = 'none'; ok.style.display = 'none';

      const valid = nameEl.value.trim().length >= 2 && isValidEmail(mailEl.value.trim());
      if(!valid){ err.style.display = 'block'; return; }

      // TODO: Replace with real submit (fetch to your backend or service)
      // Example for later:
      // fetch('/anmelden', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ name: nameEl.value, email: mailEl.value }) })
      //   .then(r => r.ok ? ok.style.display = 'block' : (err.style.display = 'block'))
      //   .catch(() => err.style.display = 'block');

      ok.style.display = 'block';
      form.reset();
    });
  </script>
